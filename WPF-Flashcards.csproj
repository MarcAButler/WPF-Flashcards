<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>WPF_Flashcards</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\WPF-Cards-ICON.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\WPF-Cards-ICON.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\WPF-Cards-ICON.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\WPF-Cards-ICON.png" />
  </ItemGroup>

</Project>
